{
  "name": "nexellence",
  "version": "1.1.1",
  "description": "Web Application for an institute management",
  "author": "luk3Sky",
  "license": "ISC",
  "engines": {
    "node": "12.14.1"
  },
  "main": "server.js",
  "scripts": {
    "client": "npm start --prefix client",
    "client:dev": "npm run dev --prefix client",
    "build": "npm run build --prefix client",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server.js",
    "dev": "nodemon server.js",
    "install:full": "npm run install:server && npm run install:client",
    "install:client": "cd client && npm install",
    "install:server": "npm install",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md)\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=true npm run install:full && npm run build",
    "test": "npm run test:client",
    "test:client": "npm test --prefix client"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix"
    ],
    "*.+(json|css|md)": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "dependencies": {
    "body-parser": "^1.14.2",
    "compression": "^1.6.1",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "express": "^4.13.4",
    "method-override": "^2.3.5",
    "moment": "^2.11.2",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "history": "^1.17.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2"
  }
}
